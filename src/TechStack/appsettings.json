{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Error"
      }
    },
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.ClientInfo",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Sensitive",
      "Serilog.Exceptions",
      "Serilog.Enrichers.Thread"
    ],
    "Enrich": [
      "FromLogContext",
      "UtcTimestampEnricher",
      "WithClientIp",
      "WithCorrelationId",
      "WithEnvironmentUserName",
      "WithMachineName",
      "WithSensitiveDataMasking",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithExceptionDetails",
      {
        "Name": "WithRequestHeader",
        "Args": { "headerName": "Authorization" }
      },
      {
        "Name": "WithRequestHeader",
        "Args": { "headerName": "Content-Length" }
      }
    ],
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Seq", "Args": { "serverUrl": "http://host.docker.internal:5341" } },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "TechStack"
            }
          ],
          "propertiesAsLabels": ["app"]
        }
      }
    ]
  }
}
